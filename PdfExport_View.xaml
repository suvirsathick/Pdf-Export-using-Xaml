<Window x:Class="MyRevitAddin.Views.DirectorySelectionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Export" Height="520" Width="580"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <!-- Enhanced GroupBox style -->
        <Style x:Key="PremiumGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" 
                                    Opacity="0.2" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern premium button style -->
        <Style x:Key="PremiumButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="4"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" 
                                                Opacity="0.2" Color="#000000"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced CheckBox style -->
        <Style x:Key="PremiumCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="6,4"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,2"/>
        </Style>
    </Window.Resources>

    <!-- Premium gradient background -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFFFF" Offset="0"/>
            <GradientStop Color="#F8FAFC" Offset="0.5"/>
            <GradientStop Color="#F1F5F9" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Directory Selection Group -->
        <GroupBox Header="Export Location" 
                  Height="90" 
                  Style="{StaticResource PremiumGroupBoxStyle}">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Background="#F8FAFC" 
                        BorderBrush="#E2E8F0" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="12,8" 
                        Margin="0,0,12,0">
                    <TextBlock Text="{Binding SelectedDirectoryDisplay}" 
                             VerticalAlignment="Center"
                             TextTrimming="CharacterEllipsis"/>
                </Border>

                <Button Grid.Column="1"
                        Content="Browse..." 
                        Command="{Binding BrowseCommand}"
                        Style="{StaticResource PremiumButtonStyle}"/>
            </Grid>
        </GroupBox>

        <!-- Elements Selection Group -->
        <GroupBox Header="Available Sheets" 
                  Grid.Row="1" 
                  Style="{StaticResource PremiumGroupBoxStyle}">
            <ScrollViewer Margin="0,8,0,0" 
                         Background="#FFFFFF" 
                         BorderBrush="#E2E8F0" 
                         BorderThickness="1" 
                         VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Elements}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}"
                                     IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                     Style="{StaticResource PremiumCheckBoxStyle}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="12,8,12,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" 
                      Text="{Binding SelectedItemsCount, StringFormat='{}{0} sheets selected'}"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Foreground="#64748B"/>

            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="Export"
                        Command="{Binding OkCommand}"
                        Style="{StaticResource PremiumButtonStyle}"/>
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource PremiumButtonStyle}"
                        Background="#64748B"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>